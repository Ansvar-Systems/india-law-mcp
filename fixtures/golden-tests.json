{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "India Law MCP",
  "description": "Golden contract tests for the India Law MCP covering data protection, cybercrime, IT regulation, corporate law, consumer protection, and Aadhaar legislation",
  "tests": [
    {
      "id": "in-001",
      "category": "article_retrieval",
      "description": "Retrieve Section 4 of DPDPA 2023 — grounds for processing personal data",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Digital Personal Data Protection Act, 2023",
        "article": "4"
      },
      "assertions": {
        "result_not_empty": true,
        "text_contains": ["personal data", "processing"],
        "fields_present": ["text", "article_number", "law_name"],
        "text_not_empty": true
      }
    },
    {
      "id": "in-002",
      "category": "article_retrieval",
      "description": "Retrieve Section 43A of the IT Act 2000 — compensation for failure to protect data",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Information Technology Act, 2000",
        "article": "43A"
      },
      "assertions": {
        "result_not_empty": true,
        "text_contains": ["body corporate", "sensitive personal data"],
        "fields_present": ["text", "article_number", "law_name"],
        "text_not_empty": true
      }
    },
    {
      "id": "in-003",
      "category": "article_retrieval",
      "description": "Retrieve Section 66 of the IT Act 2000 — computer related offences (hacking)",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Information Technology Act, 2000",
        "article": "66"
      },
      "assertions": {
        "result_not_empty": true,
        "text_contains": ["computer"],
        "fields_present": ["text", "article_number", "law_name"],
        "text_not_empty": true
      }
    },
    {
      "id": "in-004",
      "category": "article_retrieval",
      "description": "Retrieve Section 69 of the IT Act 2000 — power to issue directions for interception or monitoring",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Information Technology Act, 2000",
        "article": "69"
      },
      "assertions": {
        "result_not_empty": true,
        "text_contains": ["interception", "information"],
        "fields_present": ["text", "article_number", "law_name"],
        "text_not_empty": true
      }
    },
    {
      "id": "in-005",
      "category": "search",
      "description": "Full-text search for 'personal data' returns DPDPA-related provisions",
      "tool": "search_legislation",
      "input": {
        "query": "personal data"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Digital Personal Data Protection", "personal data", "DPDPA"]
      }
    },
    {
      "id": "in-006",
      "category": "search",
      "description": "Full-text search for 'cybercrime' returns IT Act provisions",
      "tool": "search_legislation",
      "input": {
        "query": "cybercrime"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Information Technology", "computer", "offence"]
      }
    },
    {
      "id": "in-007",
      "category": "search",
      "description": "Full-text search for 'data breach' returns provisions on breach notification",
      "tool": "search_legislation",
      "input": {
        "query": "data breach"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["breach", "personal data", "notification", "Data Protection Board"]
      }
    },
    {
      "id": "in-008",
      "category": "citation_roundtrip",
      "description": "Citation for DPDPA Section 2 includes official India Code URL pattern",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Digital Personal Data Protection Act, 2023",
        "article": "2"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["text", "article_number"],
        "citation_url_pattern": "^https?://(www\\.)?indiacode\\.nic\\.in/",
        "text_not_empty": true
      }
    },
    {
      "id": "in-009",
      "category": "citation_roundtrip",
      "description": "Citation for IT Act Section 1 includes official URL and stable identifier",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Information Technology Act, 2000",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["text", "article_number", "law_name"],
        "text_not_empty": true
      }
    },
    {
      "id": "in-010",
      "category": "eu_cross_reference",
      "description": "Cross-reference lookup for DPDPA returns GDPR relationship information",
      "tool": "get_provision_eu_basis",
      "input": {
        "law_identifier": "Digital Personal Data Protection Act, 2023"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["GDPR", "2016/679", "General Data Protection", "personal data"]
      }
    },
    {
      "id": "in-011",
      "category": "negative_test",
      "description": "Non-existent law identifier returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Fictitious Nonexistent Act 9999",
        "article": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "in-012",
      "category": "negative_test",
      "description": "Malformed section number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Information Technology Act, 2000",
        "article": "XYZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
